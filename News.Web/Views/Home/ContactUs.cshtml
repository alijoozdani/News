@model News.DataLayer.Entities.ContactUs.ContactUs
@{
    ViewData["Title"] = "تماس با ما";
    var isSuccess = TempData["Success"] != null;
}
<div class="wrapper clearfix">
    <div class="right-col">
        <div class="breadcrumb clearfix">
            <span>
                شما اینجا هستید:
            </span>
            <a href="#">صفحه  اصلی</a>&nbsp;»&nbsp;<a href="#" class="current-page">تماس با ما</a>
        </div><!--end:breadcrumb-->
        <section class="entry-box">
            @*<h2>
                تعیین محل ما در نقشه گوگل
            </h2>
            <iframe class="google-map" width="100%" scrolling="no" height="370" frameborder="0" marginheight="0" marginwidth="0" src="http://maps.google.com/maps/ms?msa=0&amp;msid=202155445435279877773.0004bd5d16ad3a69014b6&amp;ie=UTF8&amp;t=m&amp;ll=21.031154,105.782976&amp;spn=0.016023,0.025663&amp;z=14&amp;output=embed"></iframe>*@
            <br>
            <h2>
                امروز با ما تماس بگیرید
            </h2>
            <p>@Model.Title</p>
            <partial name="_ContactUsForm" model="null" />
        </section><!--end:entry-box-->
    </div><!--end:right-col-->
    <div class="sidebar" id="sidebar-a">
        <div class="spacer">برای دیدن</div>
        <div id="widget-list-a-sticky-wrapper" class="sticky-wrapper" style="height: 590px;">
            <ul id="widget-list-a" class="" style="">
                <li>
                    <aside class="widget clearfix">
                        <h4 class="widget-title">اطلاعات تماس</h4>
                        <div class="textwidget">
                            <p class="contact-fax">آدرس:<h5>@Model.Address</h5></p>
                            <p class="free-phone"> تلفن:<span>@Model.PhoneNumber</span></p>
                            <p class="contact-email">ایمیل: <a href="@Model.Email">@Model.Email</a></p>
                            <p class="contact-fax">
                                ساعات پاسخگویی:
                                <br />
                                @foreach (var item in Model.ResponseTime.Split('-'))
                                {
                                    <span>@item</span><br />
                                }
                            </p>

                        </div>
                    </aside><!--end:widget-->
                </li>

                <li style="margin-bottom: 0px;">
                    <aside class="widget clearfix">
                        <div class="adv-box clearfix">
                            <a href="#"><img class="responsive-img hover-effect" src="/images/background/Logo.png" alt=""></a>
                        </div><!--end:adv-box-->
                    </aside><!--end:widget-->
                </li>
            </ul>
        </div><!--widget-list-a-->
    </div><!--sidebar-a-->
</div>

@section Scripts
{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>

    @if (isSuccess)
    {
        <script>
            swal({
                title: "پیام شما با موفقیت ارسال شد",
                text: "پاسخ از طریق ایمیل برای شما ارسال خواهد شد",
                icon: "success",
                button: "باشه"
            });
        </script>

    }

}