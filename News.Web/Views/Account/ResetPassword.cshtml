@model News.Core.DTOs.ResetPasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}


<div class="login-box">
    <div class="login-logo">
        <a href="/ForgotPassword"><b>بازیابی کلمه عبور</b></a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="ActiveCode" />
            <div class="form-group has-feedback">
                <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور جدید">
              
            </div>
            <div class="form-group has-feedback">
                <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور">
             
            </div>
            <div class="row">
                <!-- /.col -->
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">تأیید</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        <!-- /.social-auth-links -->
    </div>
    <!-- /.login-box-body -->
</div>