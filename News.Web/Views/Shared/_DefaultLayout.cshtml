
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>روبین وب</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Grid styles for IE -->
    <!--[if lt IE 10]><link rel="stylesheet" href="css/ie.css" type="text/css" media="all" /><![endif]-->
    <partial name="_HeaderLink" />
    <partial name="_MetaTags" />
    @RenderSection("LinkCss", false)

    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
        <link rel="stylesheet" href="css/ie.css" type="text/css" media="all" />
    <![endif]-->
</head>
<body class="home-page">
    <div class="pattern">
        <header id="header">
            <div class="wrapper clearfix">
                @*<cache expires-after="TimeSpan.FromHours(8)">*@
                    @await Component.InvokeAsync("CategoryComponents")
                @*</cache>*@
            </div><!--wrapper-->
        </header>
        <section class="branding">
            <div class="wrapper clearfix">
                <a id="logo-image" href="/Home"><img src="/images/icons/Logo200-90.png" alt="logo"></a>
                <a href="index.html" id="top-banner"><img class="responsive-img" src="/placeholders/top-banner.jpg" alt="banner"></a>
            </div><!--wrapper-->
            <div class="search clearfix">
                <a title="Search" class="search-icon" href="#">جستجو</a>
                <div class="search-box clearfix">
                    <form action="/Blog" class="search-form clearfix" method="get">
                        <input type="text" onBlur="if(this.value=='')this.value=this.defaultValue;" onFocus="if(this.value==this.defaultValue)this.value='';" value="Search" name="filter" class="search-text" id="autoFilter">
                        <input type="submit" value="Submit" name="submit" class="search-submit">
                    </form><!-- search-form -->
                </div><!--end:search-box-->
            </div><!--search-icon-->
        </section><!--branding-->
        <div class="separator"></div>
        <div class="main-body">
            <div class="wrapper clearfix">
                @RenderBody()
            </div><!--wrapper-->
        </div><!--main-body-->
        <footer id="footer">
            <partial name="_Footer" />
        </footer>
        <a id="scroll-to-top" href="#top">بازگشت به ابتدای صفحه</a>
    </div><!--pattern-->

    <script type="text/javascript" src="/js/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="/js/jquery.backstretch.js"></script>
    <script type="text/javascript" src="/js/jquery.nivo.slider.pack.js"></script>
    <script type="text/javascript" src="/js/jquery.prettyPhoto.js"></script>
    <script type="text/javascript" src="/js/jquery.sticky.js"></script>
    <script type="text/javascript" src="/js/jquery.carouFredSel-5.6.2.js"></script>
    <script src="/js/jquery.tweet.js" charset="utf-8"></script>
    <script type="text/javascript" src="/js/custom.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
